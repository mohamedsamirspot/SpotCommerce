@model IEnumerable<Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    @*
        Tag Helpers are attached to HTML elements inside your Razor
        views and can help you write markup that is both cleaner and easier to read
        than the traditional HTML Helpers. HTML Helpers, on the other hand, are
        invoked as methods that are mixed with HTML inside your Razor views.*@

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="@Model.ToList()[0].Name"></label>
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)   
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" /> 
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p style="color:red">No category exists...</p>
        }
    </div>
</div>

