@model SpotCommerce.Models.ShoppingCart


@{
    ViewData["Title"] = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Item Details</h2>
<br />


<div class="border backgroundWhite row">
    <div class="col-md-8">
        <div class="col-12 pb-4 d-md-none">
            <img src="@Model.Item.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Item.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Item.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Item.Description" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Item.Description)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Item.Price" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Item.Price" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Item.CategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Item.Category.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Item.SubCategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Item.SubCategory.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Count" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 offset-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" asp-action="AddToCart" value="Add to Cart" class="btn btn-primary form-control" asp-route-MenuItemId="@Model.MenuItemId">Add to Cart</button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-4 col-12 text-right">
                    <button type="submit" asp-action="AddToWishlist" value="Add to Wishlist" class="btn btn-primary form-control" asp-route-MenuItemId="@Model.MenuItemId">Add to Wishlist    <i class="fa fa-heart"></i></button>
                     
                </div>
            </div>

        </form>


    </div>
    <div class="col-md-3 offset-1 d-none d-md-block">
        <img src="@Model.Item.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
    </div>
</div>


@section Scripts{


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
